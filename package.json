{
  "name": "kinder-vervoer-api",
  "version": "1.0.0",
  "type": "module",
  "description": "School pickup management API",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "db:create": "node src/scripts/create-database.js",
    "db:init": "node src/scripts/init-db.js",
    "db:mock": "node src/scripts/mock-data.js",
    "db:migrate": "node src/scripts/run-migrations.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    },
    "collectCoverageFrom": [
      "src/routes/**/*.js",
      "!src/routes/index.js"
    ]
  },
  "dependencies": {
    "@google/maps": "^1.1.3",
    "@googlemaps/google-maps-services-js": "^3.4.1",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "cloudinary": "^1.41.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "firebase-admin": "^13.4.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "pg": "^8.10.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.32.6",
    "socket.io": "^4.8.1",
    "stripe": "^13.11.0",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@onesignal/node-onesignal": "^5.0.0-alpha-02",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
